@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}

<h1 class="mt-5">All Departments</h1>


@if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
    {
    <div class="alert alert-success">
        <h3 class="m-2">@TempData["Message"]</h3>
    </div>
    }

<form class="my-3">
    <div class="d-flex align-items-center justify-content-start">
        <input name="Search" placeholder="Search by name" class="form-control w-50 me-3" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<div class="my-5">
    <a asp-action="Create" asp-controller"Department" class="btn btn-primary">Create Department</a>
</div>


<div class="justify-content-center align-items-center text-center overflow-y-auto">
    @if (Model.Count() > 0)
        {
        <div class="h-50">
            <table class="table table-striped table-hover table-bordered rounded-3">
                <thead class="bg-info text-center">
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Creation Date</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @{int index = 1; }

                    @foreach (var department in Model)
                        {
                        <tr class="align-middle text-center">
                            <td>@index</td>
                            <td>@department.Code</td>
                            <td>@department.Name</td>
                            <td>@department.CreatedAt</td>

                            <partial name="_ButtonsPartialView" model="@department.Id" />

                        </tr>
                        index++;
                        }
            </table>

        </div>
        }
    else
        {
        <div class="alert alert-info">
            <p class="h3">There are no departments to display.</p>
        </div>
        }

</div>