@model SignUpDto


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}






<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp">
            <div class="bg-transparent border-0 alert alert-danger" asp-validation-summary="All">
            </div>
            <input class="text" asp-for="UserName" placeholder="Username" required="">
            <input class="text my-4" asp-for="FirstName" placeholder="First Name" required="">
            <input class="text" asp-for="LastName" placeholder="Last Name" required="">
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input class="text" asp-for="PhoneNumber" placeholder="Phone Number" required="">
            <input class="text w3lpass" asp-for="Password" placeholder="Password" required="">
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <div class="wthree-text">
                <label class="anim">
                    <input  class="checkbox" asp-for="TermsAndConditions" required=""/>
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Do you have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}