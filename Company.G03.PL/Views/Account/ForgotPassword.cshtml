@model ForgotPasswordDto

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SendResetPasswordUrl">
            <div class="bg-transparent border-0 alert alert-danger" asp-validation-summary="All">
            </div>
            <input class="text email" asp-for="Email" placeholder="Email" required="">

            <input type="submit" value="Reset My Password">
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}