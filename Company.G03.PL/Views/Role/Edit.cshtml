@model ReturnRoleDto
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit User</h1>

<div class="mt-5 mb-5">
    <form asp-action="Edit" enctype="multipart/form-data">
        <partial name="RolePartialView/_CreateEditPrtialView" model="@Model" />

        <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-outline-primary my-2">Add/Remove User</a>


        <div>
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Role" class="btn btn-secondary">Back to List</a>
        </div>

    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}